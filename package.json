{
  "name": "sparkpilot-x",
  "productName": "sparkpilot-x",
  "version": "1.0.0",
  "description": "system tray triggered multi-window native-UX desktop application.",
  "main": "./out/main/index.js",
  "type": "module",
  "scripts": {
    "preinstall": "npx -y only-allow npm",
    "dev": "electron-vite dev",
    "start:prod": "npm run build:all && electron ./out/main/index.js",
    "build": "npm run build:all",
    "build:all": "npm run build:preload:main && npm run build:preload:titlebar",
    "build:preload:main": "PRELOAD_ENTRY=main electron-vite build",
    "build:preload:titlebar": "PRELOAD_ENTRY=titlebar electron-vite build",
    "build:mac": "npm run build && ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ HTTP_PROXY=http://127.0.0.1:2022 HTTPS_PROXY=http://127.0.0.1:2022 CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --publish never",
    "open:mac": "open dist/mac-arm64/sparkpilot-x.app",
    "package:mac": "npm run build:mac && npm run open:mac",
    "open:prod": "electron ./out/main/index.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.web.main.json -p tsconfig.web.titlebar.json",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "simonxing",
  "license": "UNLICENSED",
  "packageManager": "npm@11.5.1",
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.4.1",
    "immer": "^10.1.1",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.541.0",
    "react-i18next": "^15.7.2",
    "react-resizable-panels": "^3.0.4",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "zod": "3.25.67",
    "zustand": "^5.0.7"
  }
}
