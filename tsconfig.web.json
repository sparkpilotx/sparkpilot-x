{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/**/*",
    "src/main/shared/**/*",
    "src/main/trpc/**/*",
    "src/preload/index.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build", "out", "docs/**", ".cursor/**", ".gemini/**"],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@shared/*": ["src/main/shared/*"],
      "@/components/*": ["src/renderer/src/components/*"],
      "@/lib/*": ["src/renderer/src/lib/*"],
      "@/hooks/*": ["src/renderer/src/hooks/*"],
      "@/stores/*": ["src/renderer/src/stores/*"],
      "@rshared/*": ["src/renderer/shared/*"]
    }
  }
}
